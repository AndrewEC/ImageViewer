<Styles xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:ImageViewer.Models">

    <Style Selector="TextBox.ExplorerPath">
        <Setter Property="Margin" Value="5" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>
    
    <Style Selector="TreeView TreeViewItem" x:DataType="models:FileNode">
        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=OneWay}" />
    </Style>

    <Style Selector="Image.PreviewImage">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="200" />
        <Setter Property="Stretch" Value="Uniform" />
    </Style>

    <Style Selector="Button.ThumbnailButton">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style Selector="ScrollViewer.ImageList">
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style Selector="StackPanel.NavPanel">
        <Setter Property="Margin" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style Selector="Button.LeftArrow">
        <Setter Property="Margin" Value="0, 0, 10, 0" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

    <Style Selector="Button.RightArrow">
        <Setter Property="Margin" Value="10, 0, 0, 0" />
    </Style>

    <Style Selector="Button.NavigationArrow">
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Background" Value="Transparent" />

        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#25000000" />
        </Style>

        <Style Selector="^:pointerpressed /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="^:disabled /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </Style>

    <Style Selector="TabControl.MainTabControl">
        <Setter Property="Background" Value="#14000000" />
    </Style>

    <Style Selector="TextBlock.ImageNameLabel">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="10" />
    </Style>

    <Style Selector="TextBlock.SettingHelpText">
        <Setter Property="MaxWidth" Value="500" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="StackPanel.SettingsRow">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Margin" Value="0,10,0,10" />
        <Setter Property="Background" Value="#FFF" />

        <Style Selector="^ StackPanel.RowPadding">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>
    </Style>

    <Style Selector="Panel.SettingsRowDivider">
        <Setter Property="Margin" Value="0,5,0,5" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="#EEE" />
    </Style>

    <Style Selector="StackPanel.SettingsColumn">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style Selector="Grid.MainGrid">
        <Setter Property="Background" Value="#EEE" />
    </Style>

</Styles>