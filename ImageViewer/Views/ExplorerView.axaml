<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"

             xmlns:viewmodel="using:ImageViewer.ViewModels"
             xmlns:model="using:ImageViewer.Models"
             x:Class="ImageViewer.Views.ExplorerView"
             x:DataType="viewmodel:ExplorerViewModel">

    <Grid RowDefinitions="8*,92*">
        <TextBox x:Name="ExplorerPathInput"
            Grid.Row="0"
            Grid.Column="0"
            Text="{Binding CurrentPath}"
            Classes="ExplorerPath">

            <TextBox.KeyBindings>
                <KeyBinding Command="{Binding UpdatePathCommand}" Gesture="Enter" />
            </TextBox.KeyBindings>

        </TextBox>

        <TreeView ItemsSource="{Binding TreeNodes}" x:Name="FolderTree" Grid.Row="1" Grid.Column="0">
            <TreeView.ItemTemplate>
                <TreeDataTemplate ItemsSource="{Binding SubNodes}">
                    <TextBlock Text="{Binding Title}" />
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>

</UserControl>